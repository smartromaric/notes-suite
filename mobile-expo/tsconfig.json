{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-native",
    "strict": true,
    "types": ["nativewind/types"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@services/*": ["src/services/*"],
      "@store/*": ["src/store/*"],
      "@database/*": ["src/database/*"],
      "@utils/*": ["src/utils/*"],
      "@navigation/*": ["src/navigation/*"]
    }
  }
}
